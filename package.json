{
	"name": "root",
	"private": true,
	"author": "Hxy1992",
	"description": "在 Vue3 中简洁、快速的使用 Cesium",
	"keywords": [
		"vue3",
		"cesium",
		"use"
	],
	"license": "MIT",
	"publishConfig": {
		"directory": "packages/vue3-use-cesium"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "pnpm --filter=vue3-use-cesium build",
		"examples:dev": "pnpm --filter=examples dev",
		"examples:build": "pnpm --filter=examples build",
		"examples:preview": "pnpm --filter=examples preview",
		"docs:dev": "node docs/typedoc.js && vitepress dev docs",
		"docs:build": "node docs/typedoc.js && vitepress build docs",
		"docs:serve": "vitepress serve docs",
		"lint:lint-staged": "lint-staged",
		"lint:eslint": "eslint --fix --cache \"**/*.{js,jsx,ts,tsx,vue}\"",
		"lint:stylelint": "stylelint --fix --cache \"**/*.{css,scss,less,styl,vue}\"",
		"lint:prettier": "prettier --write  \"**/*.{css,scss,less,styl,js,jsx,ts,tsx,vue}\""
	},
	"devDependencies": {
		"autoprefixer": "^10.4.7",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^8.7.1",
		"lint-staged": "^13.0.3",
		"postcss": "^8.4.16",
		"prettier": "^2.7.1",
		"stylelint": "^14.8.5",
		"stylelint-config-html": "^1.0.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-config-recommended-scss": "^6.0.0",
		"stylelint-config-recommended-vue": "^1.4.0",
		"stylelint-config-standard": "^25.0.0",
		"stylelint-config-standard-scss": "^3.0.0",
		"typedoc": "0.23.24",
		"typedoc-plugin-markdown": "3.14.0",
		"typescript": "^4.7.4",
		"unplugin-vue-define-options": "^0.10.0",
		"vitepress": "1.0.0-alpha.22"
	}
}
