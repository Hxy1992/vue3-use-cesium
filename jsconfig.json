{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": ["examples/*"]
		}
	},
	"include": ["packages/**/*", "examples/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage",
		"**/__tests__/**",
		"**/__demos__/**",
		"**/*.md",
		"**/*.mdx",
		"**/*.test.*",
		"**/*.spec.*",
		"examples/public/**",
		"docs",
		".git",
		".vscode",
		".github",
		"*.log",
		"*.min.*",
		"package-lock.json",
		"yarn.lock"
	]
}
